{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "ConfigurationSetting": {
      "type": "object",
      "properties": {
        "configuration_setting_label": {
          "type": "string"
        },
        "configuration_setting_value_type": {
          "type": "string",
          "enum": ["boolean", "number", "string", "tuple", "list", "None"]
        },
        "configuration_setting_value": {}
      },
      "required": ["configuration_setting_label"]
    }
  },
  "properties": {
    "model_name": {
      "type": "string"
    },
    "model_type": {
      "type": "string"
    },
    "model_framework": {
      "type": "object",
      "properties": {
        "framework_name": {
          "type": "string"
        },
        "framework_version": {}
      },
      "required": ["framework_name"]
    },
    "model_location": {
      "type": "string"
    },
    "model_architecture": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "parameter_layer": {
                "type": "object",
                "properties": {
                  "layer_type": {
                    "type": "string"
                  },
                  "layer_configuration": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "configuration_setting": {
                          "$ref": "#/definitions/ConfigurationSetting"
                        },
                        "layer_dimension": {
                          "type": "array",
                          "items": {
                            "type": ["number", "null"]
                          },
                          "minItems": 1
                        },
                        "layer_input_dimension": {
                          "type": "array",
                          "items": {
                            "type": ["number", "null"]
                          },
                          "minItems": 1
                        }
                      }
                    },
                    "required": ["configuration_setting"]
                  }
                },
                "required": ["layer_configuration"]
              },
              "parameter": {
                "type": "object",
                "properties": {
                  "parameter_name": {
                    "type": "string"
                  },
                  "parameter_value": {}
                },
                "required": ["parameter_name"]
              }
            },
            "anyOf": [
              {
                "required": ["parameter_layer"]
              },
              {
                "required": ["parameter"]
              }
            ]
          }
        }
      },
      "required": ["parameters"]
    },
    "training_configuration": {
      "type": "object",
      "properties": {
        "hyperparameters": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hyperparameter": {
                "type": "object",
                "properties": {
                  "configuration_setting": {
                    "$ref": "#/definitions/ConfigurationSetting"
                  }
                },
                "required": ["configuration_setting"]
              }
            }
          },
          "required": ["hyperparameter"]
        },
        "optimizer": {
          "type": "object",
          "properties": {
            "optimizer_name": {
              "type": "string"
            },
            "optimizer_configuration": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "configuration_setting": {
                    "$ref": "#/definitions/ConfigurationSetting"
                  }
                }
              },
              "required": ["optimizer_name", "configuration_setting"]
            }
          }
        },
        "model_initializers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "initializer": {
                "type": "object",
                "properties": {
                  "initializer_name": {
                    "type": "string"
                  },
                  "configuration_setting": {
                    "$ref": "#/definitions/ConfigurationSetting"
                  },
                  "whole_model": {
                    "type": "boolean"
                  },
                  "initializes_layer_index": {
                    "type": "number"
                  }
                },
                "required": [
                  "initializer_name",
                  "configuration_setting",
                  "whole_model"
                ]
              }
            }
          }
        }
      },
      "required": ["hyperparameters"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_for_project": {
      "type": "string"
    },
    "model_input_requirements": {
      "type": "object",
      "properties": {
        "input_dimension": {
          "type": "array",
          "items": {
            "type": ["number", "null"]
          }
        },
        "input_datatype": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "model_name",
    "model_type",
    "model_framework",
    "model_architecture",
    "created_for_project"
  ]
}
